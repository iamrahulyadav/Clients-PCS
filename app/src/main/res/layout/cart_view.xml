<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                >


                <TextView
                    android:id="@+id/bar_title"
                    android:layout_width="wrap_content"
                    android:text="Absolute Vodka"
                    android:gravity="start"
                    android:inputType="textCapCharacters"
                    android:textSize="@dimen/hint_text"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:maxLines="1"
                    android:layout_marginTop="5dp" />


                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="95dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="130dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    />

                <TextView
                    android:id="@+id/cart_title"
                    android:layout_width="wrap_content"
                    android:text="Seller: ER Publications"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="38dp" />

                <LinearLayout
                    android:id="@+id/middleLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_below="@+id/cart_price"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"

                    >
                    <Button
                        android:id="@+id/minusBottle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/remove"
                        />
                    <TextView
                        android:id="@+id/bottleCount"
                        android:layout_width="30dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="30dp"
                        android:textSize="15sp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                    <Button
                        android:id="@+id/addBottle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"

                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/add"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/cart_offerPrice"
                    android:layout_width="wrap_content"
                    android:text="Rs. 250.00"
                    android:textSize="@dimen/hint_text"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/cart_title"
                    android:layout_alignStart="@+id/cart_title" />
                <TextView
                    android:id="@+id/cart_price"
                    android:layout_width="wrap_content"
                    android:text="Rs. 250.00"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/cart_offerPrice"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/rupee_symbol_white"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="5dp"
                    android:layout_below="@+id/cart_title"
                    />
                <TextView
                    android:id="@+id/cart_offerPerc"
                    android:layout_width="wrap_content"
                    android:text="20%"
                    android:textSize="12sp"
                    android:textColor="@color/correct"
                    android:layout_toRightOf="@+id/cart_price"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/rupee_symbol_white"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_below="@+id/cart_title"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/text_gray"
                    android:layout_below="@+id/middleLayout"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_below="@+id/middleLayout"
                    android:id="@+id/bottomLayout"
                    >
                    <LinearLayout
                        android:id="@+id/addToFav"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/like"
                            android:padding="9dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Move to wishlist"
                            android:layout_toRightOf="@+id/like"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_gray"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        />
                    <LinearLayout
                        android:id="@+id/remove"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/trash_grey"
                        android:padding="9dp"
                        android:layout_centerVertical="true"

                        android:layout_marginEnd="5dp"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:textSize="12sp"
                        android:textColor="@color/black"

                        android:layout_marginEnd="30dp"
                        />
                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/cart_price"
                    />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_gray"/>
    </LinearLayout>


</android.support.v7.widget.CardView>