<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="3dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="2dp"
    android:background="@drawable/round_white"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/whiterect"
        android:orientation="vertical">

<RelativeLayout
    android:id="@+id/lt3"
    android:layout_width="match_parent"
    android:layout_height="170dp"

    >
    <ImageView
        android:id="@+id/imgcat"
        android:layout_width="130dp"
        android:scaleType="centerInside"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp"
         />
    <ImageView
        android:id="@+id/addTowish"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:src="@drawable/wish_greay"

        />
</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:minLines="2"
        android:layout_margin="2dp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="lato"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:text="SSC English languge \n Chapter Wise Solved"/>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="22dp"
    >
    <TextView
        android:id="@+id/noquize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textColor="@color/hint_color"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:fontFamily="Loto"
        android:text="No of Quize : 06"/>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/freetext"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:fontFamily="Loto"
        android:text="" />
    <TextView
        android:id="@+id/pricetxt"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/red_text"
        android:textSize="14dp"
        android:fontFamily="Loto"
        android:text="3000.56"/>
    <TextView
        android:id="@+id/priceofferttxt"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:fontFamily="Loto"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="17dp"
        android:text=" 300.87"/>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >

    <Button
        android:id="@+id/cartbtn"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:fontFamily="Loto"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/orangebtn"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:text="ADD To Cart"/>
    <Button
        android:id="@+id/cartbay"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:fontFamily="Loto"
        android:background="@drawable/greenbtn"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:text="Buy"/>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >

    <Button
        android:id="@+id/viewquiz"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:fontFamily="Loto"
        android:textSize="12sp"
        android:background="@drawable/viewbtn"
        android:text="View Quiz"/>
</LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>

