<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#EEEE88"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textpackegename"
                android:layout_width="match_parent"
                android:fontFamily="Arial"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Result "
                android:textColor="#FE2E2E"
                android:textSize="14dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#EEEE88"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/textstatus"
                android:layout_width="match_parent"
                android:fontFamily="Arial"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:text=""
                android:background="@drawable/quizbutton1"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textscore"
                android:layout_width="match_parent"
                android:fontFamily="Arial"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:background="@drawable/quizebutton2"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/textpercent"
                android:layout_width="match_parent"
                android:fontFamily="Arial"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/quizbutton5"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">

            <GridView
                android:id="@+id/resultcategoryshow_grid_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="160dp"
                android:gravity="center"
                android:stretchMode="columnWidth"></GridView>
            <TextView
                android:id="@+id/textnodata"
                android:layout_width="match_parent"
                android:fontFamily="Arial"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>